---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
    <div class="flex flex-col items-center">
        <h1 class="text-3xl mb-8">Welcome to Astro </h1>
        <p class="text-lg mb-8 max-w-2xl text-center">
            Astro is a static site generator that allows you to build fast and modern websites using the power of Astro components.
        </p>
        <div class="flex space-x-8">
            <!-- Giriş Kartı -->
            <a href="../en/signin" class="relative w-64 h-40 p-6 bg-purple-500 text-white rounded-lg shadow-lg hover:bg-purple-600 transition-colors flex flex-col justify-center items-center overflow-hidden border-4 border-orange-500">
                <h2 class="text-xl font-bold mb-2">Login</h2>
                <p>ogin yout account</p>
                <span class="absolute inset-0 bg-orange-500 opacity-30 rounded-lg blur-lg transform scale-125 -z-10"></span>
            </a>

            <!-- Kayıt Kartı -->
            <a href="../en/register" class="relative w-64 h-40 p-6 bg-orange-500 text-white rounded-lg shadow-lg hover:bg-orange-600 transition-colors flex flex-col justify-center items-center overflow-hidden border-4 border-purple-500">
                <h2 class="text-xl font-bold mb-2">Register</h2>
                <p>Create a new account</p>
                <span class="absolute inset-0 bg-purple-500 opacity-30 rounded-lg blur-lg transform scale-125 -z-10"></span>
            </a>
        </div>
    </div>
</Layout>
